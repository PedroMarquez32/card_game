{% extends 'base.html.twig' %}

{% block title %}Detalles del Juego{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Detalles del Juego</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header">
                    Jugador 1: {{ game.player1.username }}
                </div>
                <div class="card-body">
                    {% if game.player1Card %}
                        <h5 class="card-title">{{ game.player1Card.getNumber() }} de {{ game.player1Card.getSuit() }}</h5>
                    {% else %}
                        <p>Aún no ha seleccionado carta</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header">
                    {% if game.player2 %}
                        Jugador 2: {{ game.player2.username }}
                    {% else %}
                        Esperando jugador 2
                    {% endif %}
                </div>
                <div class="card-body">
                    {% if game.player2Card %}
                        <h5 class="card-title">{{ game.player2Card.getNumber() }} de {{ game.player2Card.getSuit() }}</h5>
                    {% else %}
                        <p>Aún no ha seleccionado carta</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Estado del Juego: {{ game.status }}</h5>
                    {% if game.winner %}
                        <p class="card-text">Ganador: {{ game.winner.username }}</p>
                    {% elseif game.status == 'finished' %}
                        <p class="card-text">¡Empate!</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {% if game.status == 'open' and not game.player2 and app.user != game.player1 %}
        <div class="mt-3">
            <form method="post" action="{{ path('game_join', {'id': game.id}) }}">
                <button type="submit" class="btn btn-primary">Unirse al Juego</button>
            </form>
        </div>
    {% endif %}

    {% if game.status == 'open' and game.player2 and app.user == game.player2 and not game.player2Card %}
        <div class="mt-3">
            <a href="{{ path('game_play', {'id': game.id}) }}" class="btn btn-primary">Seleccionar Carta</a>
        </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ path('game_index') }}" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
{% endblock %} 